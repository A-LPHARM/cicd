pipeline {
	agent any


	environment {
		DOCKERHUB_CREDENTIALS=credentials('henriksin1')
	}
	stages {

		stage("Git Checkout") {
			steps {
				git branch: 'main', url: 'https://github.com/A-LPHARM/cicd.git'
			}
		}

		stage("docker build") {
			steps{
				sh "Docker build -t henriksin1/timeserver ."
			}
		}

		stage("Authenticate") {
			steps{
				sh "echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-studin"
				echo "Login complete..."
			}
		}


		stage("Push to Registry") {
			steps{
				sh "echo pushing..."
			}
		}

		stage("Cleanup") {
			steps{
				sh "echo cleanup..."
			}
		}


	}
}